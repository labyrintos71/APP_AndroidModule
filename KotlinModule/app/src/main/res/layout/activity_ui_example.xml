<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/test"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <kotlins.module.labyrintos.EditText.ClearEditText
        android:id="@+id/clearedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:background="@drawable/line_dotted_horizontal"
        android:layerType="software" />

    <kotlins.module.labyrintos.Seekbar.SeekBarHintView
        android:id="@+id/hint_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/vertical_seekbar"
        android:layout_alignParentBottom="true"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ffffff"
        android:background="@drawable/textview_background"
        android:text="1500m"
        />

    <kotlins.module.labyrintos.Seekbar.VerticalSeekBar
        app:dockerID="@id/hint_textview"
        app:dockerUSE="true"
        app:init="1500"
        app:min="0"
        app:max="2000"
        app:step="50"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:id="@+id/vertical_seekbar"
        android:layout_width="56dp"
        android:layout_height="200dp"
        android:progressDrawable="@drawable/seekbar_progressdrawable"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:thumb="@drawable/seekbar_thumb" />
</RelativeLayout>